.row.first-row
  .span8
    %h3 Lost & Found items
  .span4{style:'margin-top:20px;'}
    = link_to "New Lost Item", new_admin_lost_found_path, class: 'btn btn-primary pull-right'
.row.customers-contents
  %table.table.table-striped.table-hover.table-bordered
    %thead
      %tr
        %th Name
        %th Description
        %th State
        %th Manage
    %tbody
      - @lost_founds.each do |lf|
        %tr
          %td= lf.item_name
          %td= lf.description
          %td= lf.lost? ? "Lost" : "Found"
          %td
            = link_to(edit_admin_lost_found_path(lf), class: 'btn btn-mini', :"data-no-turbolink"=>true) do
              %i.icon-pencil

            = link_to(admin_lost_found_path(lf), class: 'btn btn-mini', method: :delete, data: {confirm: "Are you sure"}) do
              %i.icon-trash
    %tfoot
      %tr
        %td{colspan: 12}
          = will_paginate @lost_founds
  